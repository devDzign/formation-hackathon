{% extends 'base.html.twig' %}

{% block title %} List des post {% endblock %}
{% block body %}


    <h1> La list des Post</h1>

    <table class="table table-hover">
        <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">title</th>
            <th scope="col">content</th>
            <th scope="col">actions</th>
        </tr>
        </thead>
        <tbody>

        {% for post in posts %}
            <tr>
                <th>{{ post.id }}</th>
                <td>{{ post.title }}</td>
                <td>{{ post.content }}</td>
                <td>
                    <div class="row">
                        <div class="col-12">
                            <a href="{{ path('post_show', {'id':post.id}) }}" class="btn btn-outline-primary">Show</a>
                        </div>

                        <div class="col-12 mt-1">
                            <a href="{{ path('post_edit',{'id': post.id}) }}" class="btn btn-outline-info">EDIT</a>
                        </div>


                    </div>

                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}